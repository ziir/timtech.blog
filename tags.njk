---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: “{{ tag | safe }}” Blog Posts
permalink: /tags/{{ tag | lower }}/
---
<h1>“{{ tag }}” Blog Posts</h1>

{% set postslist = collections[tag] %}
{% include "postslist.njk" %}

<p>
  <a href="{{ '/tags/' | url }}">See all tags.</a>
  <br/>
  <a href="{{ '/posts/' | url }}">See all posts.</a>
</p>